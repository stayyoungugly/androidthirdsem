<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp">

    <ImageView
        android:id="@+id/iv_song_cover"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_song_cover" />

    <TextView
        android:id="@+id/tv_song_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/author"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_song_title" />

    <ImageButton
        android:id="@+id/bt_pause"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/bt_next"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_prev"
        app:layout_constraintTop_toBottomOf="@+id/tv_song_author"
        app:srcCompat="@drawable/ic_baseline_pause_circle_filled_24"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/bt_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@null"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/bt_pause"
        app:layout_constraintEnd_toEndOf="@id/bt_pause"
        app:layout_constraintStart_toStartOf="@id/bt_pause"
        app:layout_constraintTop_toTopOf="@id/bt_pause"
        app:srcCompat="@drawable/ic_baseline_play_circle_filled_24"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/bt_prev"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="12dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/bt_pause"
        app:layout_constraintEnd_toStartOf="@+id/bt_pause"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_pause"
        app:srcCompat="@drawable/ic_baseline_skip_previous_24"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/bt_next"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/bt_pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bt_pause"
        app:layout_constraintTop_toTopOf="@+id/bt_pause"
        app:srcCompat="@drawable/ic_baseline_skip_next_24"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/bt_stop"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_pause"
        app:srcCompat="@drawable/ic_baseline_stop"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>
